{
  "name": "Cheaper Please",
  "version": "1",
  "manifest_version": 2,
  "description": "Price search, price alerts. Save $$$",
  "icons": {
    "16": "icon-16.png",
    "128": "icon-128.png"
  },
  "default_locale": "en",

  "browser_action": {
    "default_icon": {
      "19": "icon-16.png"
    },
    "default_title": "Cheaper Plz",
    "default_popup": "popup.html"
  },
  
  "content_scripts": [
    {
      "js": ["scripts/scrapeDefinitions.js", "scripts/contentScript.js"],
      "matches": ["<all_urls>"]
    }
  ],

  "background": {
    "scripts": ["scripts/backgroundScript.js"]
  },

  "permissions": [
    "tabs",
    "<all_urls>"
  ]
}
